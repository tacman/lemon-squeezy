{% extends 'base.html.twig' %}

{% block title %}Checkout!{% endblock %}

{% block content %}
    <div class="flex justify-center">
        <div>
            {% if not cart().empty %}
                <h1 class="chewy-regular text-[40px]">Cart</h1>
                <div>
                    {% for product in cart.products %}
                        <div class="rounded-2xl py-3 px-7 border-2 border-[#4F272B] w-[400px] mb-4">
                            <div class="flex justify-between">
                                <div class="flex">
                                    <img class="max-h-[50px]" src="{{ asset('images/'~product.slug~'.png') }}" alt="{{ product.name }}">
                                    <div class="pl-2">
                                        <a class="chewy-regular text-xl" href="{{ path('app_product_show', {'slug': product.slug}) }}">{{ product.name }}</a>
                                        <div class="chewy-regular text-lg">
                                            {{ product.price|price_format }}
                                            x {{ cart.productQuantity(product) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="items-center flex pl-4">
                                    <form action="{{ path('app_cart_product_delete', {'slug': product.slug}) }}" method="post">
                                        <button type="submit">
                                            <svg class="fill-[#4F272B]" height="25" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.--><path d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <form action="{{ path('app_cart_clear') }}" method="post">
                    <button class="underline" type="submit">Clear cart</button>
                </form>
                <h2 class="mt-9 mb-3 chewy-regular text-3xl">Order Summary</h2>
                <div class="flex justify-between">
                    <div>Subtotal:</div>
                    <div>{{ cart.total|price_format }}</div>
                </div>
                <div class="flex justify-between">
                    <p>Tax:</p>
                    <p>calculated at checkout</p>
                </div>
                <div class="mt-9">
                    <a data-controller="lemon-squeezy"
                        class="w-[345px] flex ml-2 rounded-3xl border border-[#50272B] bg-[#4F272B] hover:bg-[#1C0000] shadow-inner poppins-bold text-white py-3 pl-5 uppercase"
                        href="#checkout"
                    >
                        Checkout with LemonSqueezy
                        <svg class="fill-white pl-4" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><!--!Font Awesome Pro 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2025 Fonticons, Inc.--><path d="M328 96c13.3 0 24 10.7 24 24l0 240c0 13.3-10.7 24-24 24s-24-10.7-24-24l0-182.1L73 409c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l231-231L88 144c-13.3 0-24-10.7-24-24s10.7-24 24-24l240 0z"/></svg>
                    </a>
                </div>
            {% else %}
                <div class="flex justify-center">
                        <img class="max-h-[100px]" src="{{ asset('images/empty-lemonade.png') }}" alt="Squeeze the Day Logo">
                </div>
                <div class="text-center poppins-bold text-2xl mt-8">
                    Your cart is empty!
                </div>
                <div class="text-center poppins-regular text-2xl">Go grab some lemonade in the <a  class="underline hover:text-[#370E12]" href="{{ path('app_homepage') }}">store</a>!
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
