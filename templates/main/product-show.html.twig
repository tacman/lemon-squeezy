{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block content %}
<div class="mb-10 max-w-screen-md mx-auto">
    <a href="{{ path('app_homepage') }}" class="uppercase poppins-bold hover:text-[#370E12]">< back</a>
</div>
<div class="flex flex-col md:flex-row justify-center mt-8">
    <img class="h-[200px] w-[200px] mx-auto md:mx-0" src="{{ asset('images/'~product.slug~'.png') }}" alt="{{ product.name }}">
    <div class="mx-auto md:mx-0 md:ml-10">
        <h1 class="chewy-regular text-[40px]">{{ product.name }}</h1>
        <p class="chewy-regular text-lg">{{ product.price|price_format }}</p>
        <p class="w-full max-w-[400px] py-5">{{ product.description }}</p>

        <form class="max-w-xs mx-auto mb-8" action="{{ path('app_cart_product_add', {'slug': product.slug}) }}" method="post">
            <div class="flex">
                <div data-controller="product" class="relative flex items-center max-w-[8rem]">
                    <button data-action="product#decrementQuantity" type="button" id="decrement-button" data-input-counter-decrement="quantity-input" class="bg-white hover:bg-[#4F272B] border border-[#50272B] hover:text-white rounded-s-lg p-3 h-11 focus:ring-gray-100 focus:ring-2 focus:outline-none">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 2">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h16"/>
                        </svg>
                    </button>
                    <input data-product-target="quantityInput" type="text" min="1" id="quantity-input" data-input-counter aria-describedby="lemonade-quantity" class="bg-white border border-x-0 border-[#50272B] h-11 text-center text-sm focus:ring-blue-500 focus:border-blue-500 block w-full py-2.5" placeholder="" name="quantity" value="1" required />
                    <button data-action="product#incrementQuantity" type="button" id="increment-button" data-input-counter-increment="quantity-input" class="bg-white hover:text-white hover:bg-[#4F272B] border border-[#50272B] rounded-e-lg p-3 h-11 focus:ring-gray-100 focus:ring-2 focus:outline-none">
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 18 18">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 1v16M1 9h16"/>
                        </svg>
                    </button>
                </div>
                <button class="ml-2 rounded-3xl border border-[#50272B] bg-[#4F272B] hover:bg-[#1C0000] shadow-inner poppins-regular text-white py-2 w-[400px]" type="submit">Add to cart</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}

