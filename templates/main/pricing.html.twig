{% extends 'base.html.twig' %}

{% block title %}Pricing{% endblock %}

{% block content %}
    <h1 class="chewy-regular text-4xl md:text-6xl text-center mb-12 mt-5 md:mb-28">Lemonade delivered right to<br> your door! <span class="underline text-[#4EA844]">Free of charge!</span></h1>
    
    <div class="flex flex-col items-center md:flex-row md:justify-center md:gap-4">
        <div class="mb-4 md:mb-0 rounded-2xl border-4 border-[#4F272B] text-center w-[400px] py-10 px-12">
            <p class="chewy-regular text-4xl mb-10">Weekly</p>
            <div class="flex justify-center mb-10"><img class="max-h-[200px]" src="{{ asset('images/weekly-lemonade.png') }}" alt="weekly lemonade"></div>
            <a href="#weekly" class="rounded-[60px] border-2 border-[#50272B] bg-[#50272B] hover:bg-[#370E12] shadow-inner poppins-bold py-2 px-12 text-white">Subscribe</a>
        </div>
        <div class="rounded-2xl border-4 border-[#4F272B] bg-[#4F272B] text-center w-[400px] py-10 px-12">
            <p class="chewy-regular text-4xl text-white mb-10">Monthly</p>
            <div class="flex justify-center mb-10"><img class="max-h-[200px]" src="{{ asset('images/monthly-lemonade.png') }}" alt="monthly lemonade"></div>
            <a href="#monthly" class="rounded-[60px] border-2 border-[#50272B] bg-white hover:bg-slate-100 shadow-inner poppins-bold py-2 px-12">Subscribe</a>
        </div>
    </div>
{% endblock %}
